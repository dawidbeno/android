<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/compSolvTask"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/compTaskTextLeft"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="60sp" />

        <TextView
            android:text="\?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/compTaskTextMid"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="60sp" />

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/compTaskTextRight"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/compSolvButtons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:text="@string/greaterThan"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textSize="40sp"
            android:textColor="@color/almost_white"
            android:id="@+id/btnGt"
            android:layout_weight="1" />

        <Button
            android:text="@string/equal"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textSize="40sp"
            android:textColor="@color/almost_white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btnEq"
            android:layout_weight="1" />

        <Button
            android:text="@string/lessThan"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:textSize="40sp"
            android:textColor="@color/almost_white"
            android:id="@+id/btnLt"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>