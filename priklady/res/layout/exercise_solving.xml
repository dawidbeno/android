<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_exercise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="david.matematickepriklady.ui.activities.ExerciseActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:text="Typ prikladov"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/exerHeading" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:text="1 + 1 = "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="52sp"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:id="@+id/exerTask"
            android:layout_weight="1" />

        <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="52sp"
            android:id="@+id/exerAns"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <Button
                android:text="cislo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="solveTask"
                android:id="@+id/btnAns1"
                android:layout_weight="1" />

            <Button
                android:text="cislo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="solveTask"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/btnAns2"
                android:layout_weight="1" />

            <Button
                android:text="cislo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="solveTask"
                android:id="@+id/btnAns3"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <Button
                android:text="cislo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="solveTask"
                android:id="@+id/btnAns4"
                android:layout_weight="1" />

            <Button
                android:text="cislo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="solveTask"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/btnAns5"
                android:layout_weight="1" />

            <Button
                android:text="cislo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="solveTask"
                android:id="@+id/btnAns6"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/linearLayout">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/allTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView13"
                android:layout_weight="1" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:textSize="18sp"
                android:id="@+id/allTasks"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:text="@string/correctTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView15"
                android:layout_weight="1" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:textColor="@color/green"
                android:textSize="18sp"
                android:id="@+id/corrTasks"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:text="@string/failTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView17"
                android:layout_weight="1" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:id="@+id/failTasks"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:format="%s"
        android:id="@+id/chron" />


</RelativeLayout>
